datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  jobs  Job[]
}

model Job {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime
  status      String     @default("planned")
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  articles    Inventory[]
}

model Inventory {
  id        Int     @id @default(autoincrement())
  name      String
  quantity  Int
  serial    Int
  jobId     Int?
  job       Job?    @relation(fields: [jobId], references: [id])
}
